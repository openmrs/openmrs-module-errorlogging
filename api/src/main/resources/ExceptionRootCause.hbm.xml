<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.errorlogging">

    <class name="ExceptionRootCause" table="exception_root_cause">
        <id name="exceptionRootCauseId" type="int" column="exception_root_cause_id" unsaved-value="0">
            <generator class="native" />
        </id>
        <discriminator column="exception_root_cause_id" insert="false" />
        <property name="uuid" type="java.lang.String" column="uuid"
                  length="38" unique="true" />
        <property name="exceptionClass" type="java.lang.String" column="exception_class"
                  length="255" not-null="true" />
        <property name="exceptionMessage" type="java.lang.String" column="exception_message"
                  length="255" not-null="true" />
        <many-to-one name="exceptionLog" class="ExceptionLog" 
                     column="exception_log_id"
                     cascade="save-update,delete" unique="true" not-null="true"/>
        <one-to-one name="exceptionRootCauseDetail" 
                    class="ExceptionRootCauseDetail" 
                    property-ref="exceptionRootCause"
                    cascade="save-update,delete" />
    </class>

</hibernate-mapping>